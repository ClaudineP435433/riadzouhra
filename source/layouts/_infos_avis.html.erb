

  <div class="row">
    <h3 class="avis-title">
    Avis de nos Clients
    <div class="resa-list-icon resa-list" id="icon-airbnb">
        <a href="https://www.airbnb.fr/rooms/12510249" target="_blank">
          <%= image_tag "airbnb-2.svg" %>
        </a>
    </div>
    <div class="resa-list-icon resa-list" id="icon-airbnb">
        <a href="https://www.homelidays.com/hebergement/p6411395" target="_blank">
          <%= image_tag "homelidays2.png" %>
        </a>
      </div>
  </h3>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="avis-details text-center">
        <% urlh = "https://www.homelidays.com/hebergement/p6411395" %>
        <% html_fileh = open(urlh).read %>
        <% html_doch = Nokogiri::HTML(html_fileh) %>
        <% avish = html_doch.search('.pdp-left-col') %>

        <%# total = avish.search('.review-summary-row h3') %>
        <% total = avish.search('.superlative-reviews-summary').last %>
        <% avis_list = avish.search('.review-box') %>

        <ul class="list-group list-group-flush avis-homelidays">
          <li class="list-group-item"> <strong><%= total %></strong> <i>sur Homelidays</i></li>
          <% avis_list[0...4].each do |avis| %>
            <li class="list-group-item">
              <% title = avis.search('.review-headline').text.strip %>
              <% date = avis.search('.dtreviewed').attribute('title').text.strip %>
              <% autor = avis.search('.author').text.strip %>
              <% rate = avis.search('.rating-txt').text.strip %>
              <div class="avis-title">
                <h6><%= title.capitalize %></h6>
                <h6><%= rate[0].to_i %>  <i class="fa fa-star"></i></h6>
              </div>
              <p class="text-left"><%= date %>  <%= autor %></p>
            </li>
          <% end %>
          <li class="list-group-item">
            <a href="https://www.homelidays.com/hebergement/p6411395" target="_blank" class="text-right">
              <i class="fa fa-ellipsis-h"></i>
            </a>
          </li>
        </ul>

      </div>
    </div>

  </div>
